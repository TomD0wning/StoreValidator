@page "{id}"
@using StoreValidator.Pages.Stores
@model RemoveModel


<form method="post">

    <div>Confirm deletion of @Model.Store.Name</div>  

    <div class="row">
        <div class="column" style="background-color:white;">
            <p>ID: <i>@Model.Store.Id</i></p>
            <p>Description: <i>@Model.Store.Desc</i></p>
            <p>Address: <i>@Model.Store.Address</i></p>
            <p>PostCode:  <i>@Model.Store.PostCode</i></p>
            <p>Type: <i>@Model.Store.StoreType</i></p>
            <p>Department: <i>@Model.Store.Department</i></p>
            <p>Open Date: <i>@Model.Store.OpenDate</i></p>
            <p>Concessions: <i>@Model.Store.Concessions</i></p>
            <p>Size:  <i>@Model.Store.StoreSize</i></p>
        </div>
    </div>


    <input type="submit" name="save" value="Confirm" />

    <a asp-action="Index" asp-controller="Home">Back</a>


</form>